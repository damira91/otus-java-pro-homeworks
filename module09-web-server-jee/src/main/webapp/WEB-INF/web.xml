<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" version="3.1">
  <filter>
    <filter-name>IncommingRequestFilter</filter-name>
    <filter-class>ru.otus.kudaiberdieva.homework09.IncommingRequestFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>IncommingRequestFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <servlet>
    <servlet-name>AddServlet</servlet-name>
    <servlet-class>ru.otus.kudaiberdieva.homework09.AddServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AddServlet</servlet-name>
    <url-pattern>/add</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>SubtractServlet</servlet-name>
    <servlet-class>ru.otus.kudaiberdieva.homework09.SubtractServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>SubtractServlet</servlet-name>
    <url-pattern>/subtract</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>MultiplyServlet</servlet-name>
    <servlet-class>ru.otus.kudaiberdieva.homework09.MultiplyServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>MultiplyServlet</servlet-name>
    <url-pattern>/multiply</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>DivideServlet</servlet-name>
    <servlet-class>ru.otus.kudaiberdieva.homework09.DivideServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DivideServlet</servlet-name>
    <url-pattern>/div</url-pattern>
  </servlet-mapping>
</web-app>